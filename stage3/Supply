class Supply{

  boolean notEatten;
  float x, y;
  float w = 90;
  float h = 90;

  Supply(float x, float y){
    notEatten = true;  //wasn't eatten by player
    this.x = x;
    this.y = y;
}

	 // Display supply
     void display(int i){ //cause can't think of how to use string
      if(notEatten){
        if(i==1){image(goodMedSupply, x, y);}
	     	if(i==2){image(badMedSupply, x, y);}
       }
     }

	 // Check collision with player
     void checkCollision(Player player){
			if(isHit(x, y, w, h, player.x, player.y, player.w, player.h) //isEatten
          &&player.health < player.PLAYER_MAX_HEALTH){

				player.health ++;
				x = y = -1000; // don't show on screen
        notEatten = false;  
      }
     
	}
}
